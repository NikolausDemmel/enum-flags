import testing ;


project flags_tests
  : requirements <warnings>all
                 <warnings-as-errors>on
                 <include>../include/
  : default-build <variant>release
  ;


unit-test main-test
  : main-test.cpp
    /boost_config//libs
    /boost_core//libs
    /boost_assert//libs
  ;


compile should-compile.cpp ;


for src in [ glob shouldnt-compile/*.cpp ] {
  compile-fail $(src) ;
}
